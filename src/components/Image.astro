---
import RigthTrip from './icons/RigthTrip.astro';

import { getI18N } from '../i18n/index.ts';
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<div class="w-full">
  <img
    src="/public/img/image.webp"
    class="w-full h-screen object-cover object-top animate-ease-in-out animate-fade animate-duration-1000"
    alt="A section where describe a place for rest"
  />

  <div class="absolute top-10 inset-0 m-auto md:top-40 px-10 text-pretty">
    <div class="flex flex-col gap-16">
      <h1 class="text-5xl pt-6 text-white font-bold">
        {i18n.HEADER_TITLE}
      </h1>
      <p class="text-white text-xl font-semibold">
        {i18n.HEADER_DESCRIPTION}
      </p>
      <button
        class="flex flex-row justify-center items-center gap-2 overflow-hidden transform hover:scale-95 transition-transform bg-[#CCF32F] rounded-full w-36 p-2"
      >
        Take a trip
        <RigthTrip />
      </button>
    </div>
  </div>
</div>
